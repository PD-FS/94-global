<p id="notice"><%= notice %></p>

<h1>Report Parameters</h1>

<table>
  <thead>
    <tr>
      <th>Report type</th>
      <th>Name</th>
      <th>Datatype</th>
      <th>Optional</th>
      <th>Referenced table</th>
      <th>Html visualization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_parameters.each do |report_parameter| %>
      <tr>
        <td><%= report_parameter.report_type %></td>
        <td><%= report_parameter.name %></td>
        <td><%= report_parameter.dataType %></td>
        <td><%= report_parameter.optional %></td>
        <td><%= report_parameter.referenced_table %></td>
        <td><%= report_parameter.html_visualization %></td>
        <td><%= link_to 'Show', report_parameter %></td>
        <td><%= link_to 'Edit', edit_report_parameter_path(report_parameter) %></td>
        <td><%= link_to 'Destroy', report_parameter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

